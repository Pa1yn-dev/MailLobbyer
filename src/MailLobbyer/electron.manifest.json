{
  "executable": "MailLobbyer",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "MailLobbyer",
  "author": "Peter Hamilton",
  "singleInstance": true,
  "environment": "Production",
  "build": {
    "appId": "com.MailLobbyer.app",
    "productName": "MailLobbyer",
    "copyright": "Copyright Â© 2024",
    "buildVersion": "1.2.2",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "linux": {
      "icon": "../../../wwwroot/favicon.png"
      
    },
    "win": {
      "icon": "../../../wwwroot/favicon.png"
    },
    "mac": {
      "icon": "../../../wwwroot/favicon.png"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}