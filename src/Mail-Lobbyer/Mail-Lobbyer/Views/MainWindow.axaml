<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Mail_Lobbyer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Mail_Lobbyer.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Mail_Lobbyer.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
		Background="Gray"
        Title="Mail_Lobbyer">
	<Grid>
		<TabControl Grid.Row="0">
			<TabItem Header="Email" AutomationProperties.Name="Email">
				<ScrollViewer>
					<StackPanel Margin="0,20,0,0">
						<views:EmailFieldView/>
					</StackPanel>
				</ScrollViewer>
			</TabItem>

			<TabItem Header="Settings" AutomationProperties.Name="Settings">
				<ScrollViewer>
					<StackPanel Margin="0,20,0,0">
						<views:EmailFieldView/>
					</StackPanel>
				</ScrollViewer>
			</TabItem>

			<TabItem Header="About" AutomationProperties.Name="About">
				<ScrollViewer>
					<StackPanel Margin="0,20,0,0">
						<views:EmailFieldView/>
					</StackPanel>
				</ScrollViewer>
			</TabItem>
		</TabControl>

		<StackPanel Margin="0,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Center">
			<TextBlock Text="Mail-Lobbyer" FontSize="10"/>
		</StackPanel>
	</Grid>
</Window>

